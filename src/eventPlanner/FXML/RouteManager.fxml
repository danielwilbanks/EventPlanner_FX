<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eventPlanner.Controller.RouteManagerController">
   <content>
      <VBox>
         <children>
            <TabPane prefHeight="341.0" prefWidth="600.0" style="-fx-background-color: none;">
               <tabs>
                  <Tab closable="false" text="Search Routes">
                     <content>
                        <VBox prefWidth="600.0">
                           <children>
                              <Label text="Search for a route from the schedule">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </Label>
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox>
                                       <children>
                                          <Label text="Departure Field">
                                             <padding>
                                                <Insets top="5.0" />
                                             </padding>
                                          </Label>
                                          <HBox spacing="5.0">
                                             <children>
                                                <ComboBox prefWidth="200.0" promptText="-" />
                                                <TextField prefColumnCount="5" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
                                          <Label text="Arrival Field" />
                                          <HBox spacing="5.0">
                                             <children>
                                                <ComboBox prefHeight="25.0" prefWidth="200.0" promptText="-" />
                                                <TextField prefColumnCount="5" />
                                             </children>
                                          </HBox>
                                       </children>
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </VBox>
                                 </children>
                              </HBox>
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox>
                                       <children>
                                          <Label text="Minimum Distance" />
                                          <TextField promptText="nm" />
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
                                          <Label text="Maxmimum Distance" />
                                          <TextField promptText="nm" />
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
                                          <Label text="Sort Results By" />
                                          <ComboBox prefWidth="150.0" promptText="-" />
                                       </children>
                                    </VBox>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox>
                                       <children>
                                          <Label text="Minimum Length" />
                                          <TextField promptText="HH:MM" />
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
                                          <Label text="Maxmimum Length" />
                                          <TextField promptText="HH:MM" />
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
                                          <Label text="Max. Results" />
                                          <TextField text="25" />
                                       </children>
                                    </VBox>
                                 </children>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="TOP_CENTER" spacing="5.0">
                                 <children>
                                    <Button mnemonicParsing="false" prefWidth="100.0" text="Reset" />
                                    <Button defaultButton="true" mnemonicParsing="false" prefWidth="150.0" text="Search for routes" />
                                 </children>
                                 <VBox.margin>
                                    <Insets top="30.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab closable="false" text="Create Custom Route">
                     <VBox>
                        <children>
                           <Label text="Custom Route Options">
                              <VBox.margin>
                                 <Insets top="10.0" />
                              </VBox.margin>
                              <font>
                                 <Font name="System Bold" size="14.0" />
                              </font>
                           </Label>
                           <HBox spacing="20.0">
                              <children>
                                 <VBox>
                                    <children>
                                       <Label text="Departure Field">
                                          <padding>
                                             <Insets top="5.0" />
                                          </padding>
                                       </Label>
                                       <HBox spacing="5.0">
                                          <children>
                                             <ComboBox prefWidth="200.0" promptText="-" />
                                             <TextField prefColumnCount="5" />
                                          </children>
                                       </HBox>
                                    </children>
                                 </VBox>
                                 <VBox>
                                    <children>
                                       <Label text="Arrival Field" />
                                       <HBox spacing="5.0">
                                          <children>
                                             <ComboBox prefHeight="25.0" prefWidth="200.0" promptText="-" />
                                             <TextField prefColumnCount="5" />
                                          </children>
                                       </HBox>
                                    </children>
                                    <HBox.margin>
                                       <Insets top="5.0" />
                                    </HBox.margin>
                                 </VBox>
                              </children>
                           </HBox>
                           <Label text="Routing">
                              <VBox.margin>
                                 <Insets top="10.0" />
                              </VBox.margin>
                           </Label>
                           <TextField />
                           <HBox spacing="10.0">
                              <VBox.margin>
                                 <Insets top="10.0" />
                              </VBox.margin>
                              <children>
                                 <RadioButton fx:id="rnavRB" mnemonicParsing="false" selected="true" text="RNAV" />
                                 <RadioButton fx:id="nonrnavRB" mnemonicParsing="false" text="Non-RNAV" />
                                 <CheckBox mnemonicParsing="false" text="Pilot Defined" />
                                 <CheckBox mnemonicParsing="false" text="Signups Required" />
                              </children>
                           </HBox>
                           <HBox spacing="10.0">
                              <children>
                                 <VBox>
                                    <children>
                                       <Label text="Distance">
                                          <padding>
                                             <Insets top="10.0" />
                                          </padding>
                                       </Label>
                                       <TextField prefColumnCount="5" promptText="nm" />
                                    </children>
                                 </VBox>
                                 <VBox>
                                    <children>
                                       <Label text="ETE">
                                          <padding>
                                             <Insets top="10.0" />
                                          </padding>
                                       </Label>
                                       <HBox alignment="CENTER" spacing="10.0">
                                          <children>
                                             <TextField prefColumnCount="10" promptText="HH:MM" />
                                             <Label text="RVSM Altitude">
                                                <HBox.margin>
                                                   <Insets left="50.0" />
                                                </HBox.margin>
                                             </Label>
                                             <ToggleButton fx:id="ebToggle" mnemonicParsing="false" text="Eastbound" />
                                             <ToggleButton fx:id="wbToggle" mnemonicParsing="false" text="Westbound" />
                                          </children>
                                       </HBox>
                                    </children>
                                 </VBox>
                              </children>
                           </HBox>
                           <HBox alignment="TOP_CENTER" spacing="10.0">
                              <children>
                                 <Button mnemonicParsing="false" prefWidth="100.0" text="Reset" />
                                 <Button defaultButton="true" mnemonicParsing="false" prefWidth="150.0" text="Add route to event" />
                              </children>
                              <VBox.margin>
                                 <Insets top="30.0" />
                              </VBox.margin>
                           </HBox>
                        </children>
                        <padding>
                           <Insets left="10.0" right="10.0" />
                        </padding></VBox>
                  </Tab>
               </tabs>
            </TabPane>
         </children>
      </VBox>
   </content>
</ScrollPane>
