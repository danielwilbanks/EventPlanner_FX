<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eventPlanner.Controller.TemplateSelectionController">
    <center>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="newEventBtn" mnemonicParsing="false">
                    <graphic>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../Icons/plane.png" />
                                    </image>
                                </ImageView>
                                <VBox>
                                    <children>
                                        <Label text="Standard">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Label>
                                        <Label text="A standard event with multiple routes" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </graphic>
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button layoutX="175.0" layoutY="161.0" mnemonicParsing="false">
                    <graphic>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../Icons/LoadFile.png" />
                                    </image>
                                </ImageView>
                                <VBox>
                                    <children>
                                        <Label text="Crossfire">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Label>
                                        <Label text="An event with routes between two airports only" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </graphic>
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button layoutX="175.0" layoutY="193.0" maxHeight="44.0" mnemonicParsing="false">
                    <graphic>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../Icons/calendar4.png" />
                                    </image>
                                </ImageView>
                                <VBox>
                                    <children>
                                        <Label text="One-Way">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Label>
                                        <Label text="An event with only one route. Ideal for group flights." />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </graphic>
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
            <Button layoutX="131.0" layoutY="211.0" maxHeight="44.0" mnemonicParsing="false">
               <graphic>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../Icons/CTP.png" />
                           </image>
                        </ImageView>
                        <VBox>
                           <children>
                              <Label text="Cross the Pond">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Label text="VATSIM's semi-annual atlantic crossing event" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </graphic>
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </center>
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label text="Choose a Template">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
            <BorderPane.margin>
                <Insets bottom="5.0" right="5.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
